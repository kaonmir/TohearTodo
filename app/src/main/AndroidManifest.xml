<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xyz.kaonmir.toheartodo">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TohearTodo">
        <activity
            android:name=".view.hearmode.HearActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_hear"
            android:theme="@style/Theme.TohearTodo.Fullscreen" />
        <activity android:name=".view.item.ItemActivity" />
        <activity android:name=".view.book.BookActivity">
        </activity>
        <activity android:name=".view.sidebar.SettingsActivity" />
        <activity android:name=".view.intro.login.LoginActivity" />
        <activity android:name=".view.intro.Splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>